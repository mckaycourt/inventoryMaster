style.
    tr {
        height: 50px;
        z-index: 1;
    }
    td {
        border: 1px solid black;

    }

    a {
        z-index: 2;
    }

    h3 {
        width: 50%;
    }

    .table {
        border-spacing: 0;
        width: 50%;
        overflow-x: auto;
    }

    .table td, .table th {
        border: 1px solid #ddd;
        padding: 8px;
        border-right: 0;
        border-left: 0;
    }

    .table td:last-child {
        border-right: 1px solid #ddd;
    }

    .table td:first-child {
        border-left: 1px solid #ddd;
    }

    .table th {
        padding-top: 12px;
        padding-bottom: 12px;
        border-top: 0;
    }

